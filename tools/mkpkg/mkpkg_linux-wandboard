echo "getting sources..."
  if [ ! -d wandboard-kernel.git ]; then
#    git clone git://github.com/wandboard-org/linux.git --depth=1 -b wandboard_imx_3.0.35_4.1.0 wandboard-kernel.git
    git clone git://github.com/wandboard-org/linux.git --depth=1 -b wandboard_imx_3.10.17_1.0.0_beta wandboard-kernel.git
  fi

  cd wandboard-kernel.git
    git pull
    GIT_REV=`git log -n1 --format=%h`
  cd ..

echo "copying sources..."
  rm -rf linux-$GIT_REV
  cp -R wandboard-kernel.git linux-$GIT_REV

echo "cleaning sources..."
  rm -rf linux-$GIT_REV/.git

echo "packing sources..."
  tar cvJf linux-$GIT_REV.tar.xz linux-$GIT_REV
echo "remove temporary sourcedir..."
  rm -rf linux-$GIT_REV
