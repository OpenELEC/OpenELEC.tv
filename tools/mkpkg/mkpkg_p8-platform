echo "getting sources..."
  if [ ! -d p8-platform.git ]; then
    git clone --depth=1 https://github.com/Pulse-Eight/platform.git p8-platform.git
  fi

  cd p8-platform.git
    git pull
    GIT_REV=`git log -n1 --format=%h`
  cd ..

echo "copying sources..."
  rm -rf p8-platform-$GIT_REV
  cp -R p8-platform.git p8-platform-$GIT_REV

echo "cleaning sources..."
  rm -rf p8-platform-$GIT_REV/.git

echo "packing sources..."
  tar cvJf p8-platform-$GIT_REV.tar.xz p8-platform-$GIT_REV

echo "remove temporary sourcedir..."
  rm -rf p8-platform-$GIT_REV
