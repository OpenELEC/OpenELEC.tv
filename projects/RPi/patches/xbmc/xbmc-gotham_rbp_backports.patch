+
+  .if DEFINED_SHIFT
+    .unreq SHIFT
+  .endif
+  .if DEFINED_MASK
+    .unreq MASK
+  .endif
+.endm
+
+.macro switch_on_fir_taps  mask_minus1, shift_0, shift_8, iir_taps
+        ldr     pc, [pc, a3, LSL #2] // firorder is in range 0-(8-iir_taps)
+        .word   0
+        .word   70f
+        .word   71f
+        .word   72f
+        .word   73f
+        .word   74f
+        .word   75f
+ .if \iir_taps <= 2
+        .word   76f
+  .if \iir_taps <= 1
+        .word   77f
+   .if \iir_taps == 0
+        .word   78f
+   .endif
+  .endif
