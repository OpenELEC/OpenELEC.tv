TEMP="0"

if [ -f /usr/bin/sensors ]; then
  TEMP=`/usr/bin/sensors -u | tail -n6 | grep temp._input | awk '{print $2 }' |awk '{printf("%d\n",$1 + 0.5);}'`
fi

echo "${TEMP} C"
