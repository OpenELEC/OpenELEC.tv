+int COutput::FindFreePixmap()
+{
+  // find free pixmap
+  unsigned int i;
+  for (i = 0; i < m_bufferPool.pixmaps.size(); ++i)
+  {
+    if (!m_bufferPool.pixmaps[i].used)
+      break;
+  }
+  if (i == m_bufferPool.pixmaps.size())
+    return -1;
+  else
+    return i;
+}
