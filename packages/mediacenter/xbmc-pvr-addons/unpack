. config/options $1

if [ "$SAMBA_CLIENT" = yes ]; then
  # this code is copied from scripts/unpack
  for i in $PKG_DIR/patches-manual-fortherecord/$PKG_NAME-$PKG_VERSION*.patch ; do
    if [ -f "$i" ]; then
      PATCH=`basename $i`
      PT=`echo $PATCH | sed 's/.*\.\(.*\)$/\1/'`
      if [ "$PT" != "patch" -a "$PT" != "$TARGET_ARCH" ]; then
        printf "%${BUILD_INDENT}c SKIP PATCH:   $i\n" ' '>&$SILENT_OUT
        continue;
      else
        printf "%${BUILD_INDENT}c APPLY PATCH:   $i\n" ' '>&$SILENT_OUT
        cat $i | patch -d `echo "$PKG_BUILD" | cut -f1 -d\ ` -p1 >&$VERBOSE_OUT
      fi
    fi
  done
fi
