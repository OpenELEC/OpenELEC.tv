#
# reset installation
#
# runlevels: openelec, textmode

if [ -f /storage/.factory_reset ]; then
  progress "performing factory reset"

  partition=`/bin/cat /proc/mounts | /bin/grep '/storage' | /usr/bin/awk '{print $1}'`
  if [ ! -z "${partition}" ]; then
    /bin/umount -f -l /storage
    /sbin/mkfs.ext4 ${partition}
    /sbin/tune2fs -U random -L Storage ${partition}

    progress "rebooting"
    /sbin/reboot -f
  fi
elif [ -f /storage/.settings_reset ]; then
  progress "performing settings reset"

  /bin/rm -r -f /storage/.cache /storage/.config /storage/.update /storage/.xbmc /storage/.settings_reset
fi

