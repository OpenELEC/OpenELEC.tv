. config/options $1

STAMP=$STAMPS/$1/unpack

test $PKG_DIR/config/linux.$TARGET_ARCH.conf -nt $STAMP -o \
     $PROJECT_DIR/$PROJECT/linux/linux.$TARGET_ARCH.conf -nt $STAMP -o \
     $PKG_DIR/url -nt $STAMP -o \
     $PKG_DIR/meta -nt $STAMP && rm -f $STAMP

exit 0
