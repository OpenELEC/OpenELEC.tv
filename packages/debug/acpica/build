. config/options $1

[ "$TARGET_ARCH" = "i386" ] && ACPICA_BITS="32"
[ "$TARGET_ARCH" = "x86_64" ] && ACPICA_BITS="64"

cd $PKG_BUILD

make PREFIX=/usr \
     CC="$TARGET_CC" \
     AR="$TARGET_AR" \
     HOST=_LINUX \
     HARDWARE_NAME=$TARGET_ARCH \
     BITS=$ACPICA_BITS \
     YACC=$ROOT/$TOOLCHAIN/bin/bison \
     CWARNINGFLAGS="-O2 $TARGET_CFLAGS"

