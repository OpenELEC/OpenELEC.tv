. config/options $1

LIBCOFI_DIR="$BUILD/libcofi-*"

mkdir -p $INSTALL/lib
  cp -P $LIBCOFI_DIR/*.so* $INSTALL/lib

mkdir -p $INSTALL/etc
  echo "/lib/libcofi_rpi.so" > $INSTALL/etc/ld.so.preload
