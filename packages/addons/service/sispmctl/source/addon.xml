<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon
    id="script.service.sispmctl"
    name="SiS-PM Screensaver"
    version="1"
    provider-name="aep">
    <requires>
        <import addon="xbmc.python"                 version="2.1.0"/>
        <import addon="xbmc.json"                   version="6.0.0"/>
        <import addon="xbmc.addon"                  version="12.0.0"/>
    </requires>
    <extension point="xbmc.python.script"         library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.service"               library="default.py" start="login"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Switch off SiS-PM Silver Shield prepherials when screensaver is activated</summary>
        <description lang="en">Switch off SiS-PM Silver Shield prepherials when screensaver is activated</description>
        <disclaimer />
        <language />
        <platform>linux</platform>
    </extension>
</addon>
