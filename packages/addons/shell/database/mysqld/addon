. config/options $1

mkdir -p $ADDON_BUILD/$PKG_ADDON_ID
mkdir -p $ADDON_BUILD/$PKG_ADDON_ID/bin
mkdir -p $ADDON_BUILD/$PKG_ADDON_ID/bin/bin
mkdir -p $ADDON_BUILD/$PKG_ADDON_ID/bin/share
mkdir -p $ADDON_BUILD/$PKG_ADDON_ID/bin/share/mysql
mkdir -p $ADDON_BUILD/$PKG_ADDON_ID/bin/init.d

find $ROOT/$BUILD/mysql-*/sql/share -type d -exec cp -R \{\} $ADDON_BUILD/$PKG_ADDON_ID/bin/share/mysql \;

cp $ROOT/$BUILD/mysql-*/sql/mysqld $ADDON_BUILD/$PKG_ADDON_ID/bin/bin
cp $ROOT/$BUILD/mysql-*/extra/resolveip $ADDON_BUILD/$PKG_ADDON_ID/bin/bin/
cp $ROOT/$BUILD/mysql-*/extra/my_print_defaults $ADDON_BUILD/$PKG_ADDON_ID/bin/bin/
cp $ROOT/$BUILD/mysql-*/scripts/mysql_install_db $ADDON_BUILD/$PKG_ADDON_ID/bin/bin/

cp $ROOT/$BUILD/mysql-*/client/mysql $ADDON_BUILD/$PKG_ADDON_ID/bin/
cp $ROOT/$BUILD/mysql-*/client/mysqladmin $ADDON_BUILD/$PKG_ADDON_ID/bin/

cp $ROOT/$BUILD/mysql-*/scripts/*.sql $ADDON_BUILD/$PKG_ADDON_ID/bin/share/


sed 's/#ROOT_PASSWORD#/'$ROOT_PASSWORD'/g' $PKG_DIR/config/init.d/mysql>$ADDON_BUILD/$PKG_ADDON_ID/bin/init.d/mysql




