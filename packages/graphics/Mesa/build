. config/options $1

get_graphicdrivers

# dont use gold linker because of compiling issues
  strip_gold

# Mesa fails to build with LTO optimization
  strip_lto

if [ "$LLVM_SUPPORT" = "yes" ]; then
  export LLVM_CONFIG="$SYSROOT_PREFIX/usr/bin/llvm-config"
  MESA_GALLIUM_LLVM="--enable-gallium-llvm"
else
  MESA_GALLIUM_LLVM="--disable-gallium-llvm"
fi

cd $PKG_BUILD

HOST_CC="$HOST_CC" \
HOST_OPT_FLAGS="$HOST_CFLAGS" \
X11_INCLUDES= \
DRI_DRIVER_INSTALL_DIR="$XORG_PATH_DRI" \
DRI_DRIVER_SEARCH_DIR="$XORG_PATH_DRI" \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --disable-debug \
            --enable-texture-float \
            --disable-selinux \
            --enable-opengl \
            --enable-glx-tls \
            --enable-driglx-direct \
            --disable-gles1 \
            --disable-gles2 \
            --disable-openvg \
            --disable-xorg \
            --enable-glu \
            --disable-gl-osmesa \
            --disable-glut \
            --disable-glw \
            --disable-motif \
            --disable-d3d1x \
            --disable-egl \
            --disable-gbm \
            --disable-gallium-egl \
            --disable-gallium-gbm \
            --disable-shared-glapi \
            --enable-xcb \
            --disable-shared-dricore \
            --disable-egl \
            $MESA_GALLIUM_LLVM \
            --with-gallium-drivers="$GALLIUM_DRIVERS" \
            --with-driver="dri" \
            --with-dri-drivers="$DRI_DRIVERS" \
            --with-x \

make CC="$HOST_CC" \
     CXX="$HOST_CXX" \
     CFLAGS="$HOST_CFLAGS" \
     CXXFLAGS="$HOST_CXXFLAGS" \
     LDFLAGS="$HOST_LDFLAGS" \
     -C src/glsl builtin_compiler

cp src/glsl/builtin_compiler $ROOT/$TOOLCHAIN/bin
make -C src/glsl clean

sed -e "s#\.\/builtin_compiler#$ROOT/$TOOLCHAIN/bin/builtin_compiler#g" -i src/glsl/Makefile

make

$MAKEINSTALL
