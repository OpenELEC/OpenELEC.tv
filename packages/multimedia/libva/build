#!/bin/sh

. config/options $1

cd $BUILD/$PKG_NAME-*

# apply patches provide with the source package
  cat debian/patches/*.patch | patch -p1

./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-shared \
            --disable-static \
            --enable-glx \
            --disable-dummy-driver \
            --enable-i965-driver \
            --with-drivers-path="/usr/lib/va" \

make

$MAKEINSTALL
