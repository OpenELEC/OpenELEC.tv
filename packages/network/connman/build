. config/options $1

export WPASUPPLICANT="/usr/bin/wpa_supplicant"

cd $PKG_BUILD
#ac_cv_path_WPASUPPLICANT="/sbin/wpa_supplicant" \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --disable-gtk-doc \
            --disable-debug \
            --enable-threads \
            --enable-ethernet=builtin \
            --enable-wifi=builtin \
            --disable-bluetooth \
            --disable-hh2serial-gps \
            --disable-ofono \
            --disable-openconnect \
            --disable-portal \
            --disable-openvpn \
            --disable-vpnc \
            --enable-loopback=builtin \
            --disable-pacrunner \
            --disable-google \
            --enable-meego=builtin \
            --disable-iwmx \
            --disable-iospm \
            --enable-ntpd=builtin \
            --with-ntpd="/usr/sbin/ntpd" \
            --disable-nmcompat \
            --disable-polkit \
            --enable-client \
            --disable-tools \
            --disable-test \
            --disable-fake \
            --disable-capng \
            --enable-datafiles \
            --disable-silent-rules \

make
