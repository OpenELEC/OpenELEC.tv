if [[ -f /storage/.cache/services/mdns4.conf && -f /storage/.cache/services/avahi.conf ]]; then
  cp /usr/config/nsswitch.mdns4 /var/run/nsswitch.conf
else
  cp /usr/config/nsswitch.conf  /var/run/nsswitch.conf
fi

