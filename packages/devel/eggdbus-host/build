. config/options $1

$SCRIPTS/unpack eggdbus

# dont build parallel
  MAKEFLAGS=-j1

EGGDBUS_DIR=`ls -d $BUILD/eggdbus-[0-9]*`

setup_toolchain host

cd $EGGDBUS_DIR
do_autoreconf

mkdir -p .build-host && cd .build-host
../configure --host=$HOST_NAME \
             --build=$HOST_NAME \
             --prefix=$ROOT/$TOOLCHAIN \
             --sysconfdir=$ROOT/$TOOLCHAIN/etc \
             --disable-static \
             --enable-shared \
             --disable-man-pages \

make
make install
