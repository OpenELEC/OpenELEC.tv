. config/options $1

cd $PKG_BUILD

setup_toolchain host

make CC=$HOST_CC -C libcap _makenames

setup_toolchain target

make CC=$TARGET_CC lib=/lib

$MAKEINSTALL -j1 RAISE_SETFCAP=no lib=/lib
