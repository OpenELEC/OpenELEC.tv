. config/options

if [ "$TARGET_FPU" = neon -o "$TARGET_FPU" = neon-fp16 ]; then
  CFG_NEON="--enable-neon"
else
  CFG_NEON="--disable-neon"
fi

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
            --with-xorg-module-dir=$XORG_PATH_MODULES \
            $CFG_NEON \

make
