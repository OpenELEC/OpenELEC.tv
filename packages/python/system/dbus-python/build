#!/bin/sh

. config/options $1

PYTHON_LIBDIR="`ls -d $SYSROOT_PREFIX/usr/lib/python*`"

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \

make

$MAKEINSTALL

python -Wi -t $PYTHON_LIBDIR/compileall.py .
