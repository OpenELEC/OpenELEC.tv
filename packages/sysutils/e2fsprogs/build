. config/options $1

cd $PKG_BUILD

./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --bindir=/usr/bin \
            --sbindir=/usr/bin \
            --sysconfdir=/etc \
            --enable-verbose-makecmds \
            --enable-symlink-install \
            --enable-symlink-build \
            --enable-compression \
            --enable-htree \
            --enable-elf-shlibs \
            --disable-bsd-shlibs \
            --disable-profile \
            --disable-jbd-debug \
            --disable-blkid-debug \
            --disable-testio-debug \
            --disable-libuuid \
            --disable-libblkid \
            --disable-debugfs \
            --disable-imager \
            --enable-resizer \
            --disable-fsck \
            --disable-e2initrd-helper \
            --enable-tls \
            --disable-uuidd \
            --disable-nls \
            --disable-rpath \
            --with-gnu-ld \

make
