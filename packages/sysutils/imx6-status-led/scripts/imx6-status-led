. /usr/lib/openelec/imx6-system-type

case "$1" in
  "on")
    TRIGGER=default-on
    ;;
  "heartbeat")
    TRIGGER=heartbeat
    ;;
  *)
    exit 0
    ;;
esac

case "$SYSTEM_TYPE" in
  "matrix")
    LED="/sys/class/leds/red/trigger"
    ;;
  "cuboxi")
    LED="/sys/class/leds/imx6:red:front/trigger"
    ;;
  *)
    exit 0
    ;;
esac

echo "$TRIGGER" > "$LED"

