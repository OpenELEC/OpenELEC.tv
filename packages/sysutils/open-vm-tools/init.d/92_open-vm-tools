# setup keyboard layout
#
# runlevels: openelec

(
  # exit if not in vmware
  if [ ! -x /usr/bin/vmware-checkvm ] || ! /usr/bin/vmware-checkvm > /dev/null 2>&1 ; then
    exit 0
  fi

  wait_for_xorg

  # load modules
  modprobe vmhgfs
  modprobe vmsync
  modprobe vmblock
  modprobe -r pcnet32
  modprobe vmxnet
  modprobe pcnet32

  /usr/bin/vmtoolsd --background /var/run/vmtoolsd.pid
)&
