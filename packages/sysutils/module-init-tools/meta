PKG_NAME="module-init-tools"
PKG_VERSION="3.16"
PKG_REV="1"
PKG_ARCH="any"
PKG_LICENSE="GPL"
PKG_SITE="ftp://ftp.kernel.org/pub/linux/utils/kernel/module-init-tools/"
#PKG_URL="http://kernel.org/pub/linux/utils/kernel/module-init-tools/$PKG_NAME-$PKG_VERSION.tar.xz"
PKG_URL="$DISTRO_SRC/$PKG_NAME-$PKG_VERSION.tar.bz2"
PKG_DEPENDS=""
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY="optional"
PKG_SECTION="system"
PKG_SHORTDESC="module-init-tools: The programs needed to load and unload Linux Kernel Modules"
PKG_LONGDESC="The Linux kernel allows new kernel pieces to be loaded and old ones to be unloaded while the kernel continues to run. These loadable pieces are called modules, and can include device drivers and filesystems among other things. This package includes program to load and unload programs both automatically and manually."
PKG_IS_ADDON="no"

PKG_AUTORECONF="no"
