. config/options $1

if [ "$MYSQL_SERVER" = "yes" ]; then

  mkdir -p $INSTALL/usr/bin
  mkdir -p $INSTALL/usr/share/mysql

  find $PKG_BUILD/sql/share -type d -exec cp -R \{\} $INSTALL/usr/share/mysql \;

  cp $PKG_BUILD/sql/mysqld $INSTALL/usr/sbin

  cp $PKG_BUILD/extra/resolveip $INSTALL/usr/bin
  cp $PKG_BUILD/extra/my_print_defaults $INSTALL/usr/bin

  cp $PKG_BUILD/client/mysql $INSTALL/usr/bin
  cp $PKG_BUILD/client/mysqladmin $INSTALL/usr/bin

  cp $PKG_BUILD/scripts/*.sql $INSTALL/usr/share/mysql
  cp $PKG_BUILD/scripts/mysql_install_db $INSTALL/usr/bin

  mkdir -p $INSTALL/etc/init.d
  sed 's/#ROOT_PASSWORD#/'$ROOT_PASSWORD'/g' $PKG_DIR/scripts/54_mysql>$INSTALL/etc/init.d/54_mysql
fi



