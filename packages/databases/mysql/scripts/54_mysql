# start MySql Server
#
# runlevels: openelec, textmode

(
  if [ -f /var/config/settings.conf ]; then
    . /var/config/settings.conf

    if [ "$MYSQL_START" = "true" ]; then

      MYSQL_USERNAME="root"
      MYSQL_PASSWORD="#ROOT_PASSWORD#"
      MYSQL_ROOT_DIR="/storage/.cache/mysql"

      progress  "Starting MySql server"

      if [ ! -f $MYSQL_ROOT_DIR/data ]; then

        mkdir -p $MYSQL_ROOT_DIR
        mkdir -p $MYSQL_ROOT_DIR/data

        progress  "Initialize MySql Database"

        mysql_install_db --user=root --datadir=$MYSQL_ROOT_DIR/data > /dev/null 2>&1
        (mysqld --user=root --datadir=$MYSQL_ROOT_DIR/data > /dev/null 2>&1)&
        mysql -u root -e "GRANT ALL PRIVILEGES ON *.* TO '$MYSQL_USERNAME'@'%' IDENTIFIED BY '$MYSQL_PASSWORD' WITH GRANT OPTION;" > /dev/null 2>&1
        mysql -u root -e "GRANT ALL PRIVILEGES ON *.* TO '$MYSQL_USERNAME'@'localhost' IDENTIFIED BY '$MYSQL_PASSWORD' WITH GRANT OPTION;" > /dev/null 2>&1
        killall mysqld
      fi

      (mysqld --user=root --datadir=$MYSQL_ROOT_DIR/data > /dev/null 2>&1)&
    fi
  fi
)&

